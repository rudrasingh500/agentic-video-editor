# Core runtime
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
REDIS_AUTH_URL=redis://localhost:6379/0
REDIS_RQ_URL=redis://localhost:6379/1
LOG_LEVEL=INFO
SESSION_COOKIE_SECURE=true

# Storage
GCS_BUCKET=video-editor
GCS_RENDER_BUCKET=video-editor-renders

# GCP credentials JSON string (single-line JSON)
GCP_CREDENTIALS={"type":"service_account","project_id":"your-project-id"}

# Render execution mode: local | cloud
RENDER_EXECUTION_MODE=local

# Optional auth/security
DEV_API_TOKEN=
RENDER_WEBHOOK_SECRET=

# Optional OpenRouter / generation
OPENROUTER_API_KEY=
OPENROUTER_MAX_INLINE_MEDIA_BYTES=8000000
NANO_BANANA_MODEL=google/gemini-3-pro-image-preview

# Optional Google Veo
GOOGLE_API_KEY=
VEO_MODEL=veo-3.1-generate-preview
VEO_GENERATION_TIMEOUT_SECONDS=900
VEO_POLL_INTERVAL_SECONDS=10

# Optional edit agent tuning
EDIT_AGENT_MAX_ITERATIONS=0
EDIT_AGENT_MAX_CONTEXT_TOKENS=80000
EDIT_AGENT_PARALLEL_WORKERS=4
EDIT_AGENT_LOG_PAYLOADS=false
EDIT_AGENT_LOG_MAX_CHARS=2000
EDIT_AGENT_LOG_FILE=
EDIT_AGENT_RENDER_WAIT_SECONDS=60

# Optional worker selection: simple | spawn | fork
RQ_WORKER_CLASS=

# Optional ffmpeg overrides
FFMPEG_BIN=ffmpeg
FFPROBE_BIN=ffprobe

# Cloud mode only
GCP_PROJECT_ID=
GCP_REGION=us-central1
RENDER_CPU_JOB_NAME=video-render-cpu
RENDER_GPU_JOB_NAME=video-render-gpu
RENDER_CPU_IMAGE=
RENDER_GPU_IMAGE=
RENDER_SERVICE_ACCOUNT=
